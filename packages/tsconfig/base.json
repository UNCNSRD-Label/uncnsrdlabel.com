{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@uncnsrdlabel/graphql-hygraph/*": ["./src/*"],
      "@uncnsrdlabel/graphql-shopify-admin/*": ["./src/*"],
      "@uncnsrdlabel/graphql-shopify-storefront/*": ["./src/*"],
      "@uncnsrdlabel/lib/*": ["./src/*"],
      "@uncnsrdlabel/providers/*": ["./src/*"],
      "@uncnsrdlabel/tailwind-config/*": ["./src/*"],
      "@uncnsrdlabel/types/*": ["./src/*"],
      "@uncnsrdlabel/ui/*": ["./src/*"]
    },
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "node"
    ]
  },
  "display": "Base",
  "exclude": ["node_modules"]
}